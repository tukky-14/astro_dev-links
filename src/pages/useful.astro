---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import { usefulSites } from '../features/useful/useful';
---

<Layout>
    <div class="h-screen">
        <Header />
        <div class="flex h-[calc(100%_-_3rem)]">
            <Sidebar />
            <main class="w-5/6 px-6 py-6 grid grid-cols-3 gap-8 overflow-scroll">
                {
                    usefulSites.map((site) => (
                        <a
                            href={site.url}
                            class="h-80 p-4 bg-gray-50 animate-fade-in-top hover:border hover:border-indigo-400 hover:cursor-pointer"
                            target="_blank"
                            rel="noreferrer"
                        >
                            <p class="mb-2 font-bold text-center">{site.title}</p>
                            <img
                                class="w-full border"
                                src={site.image}
                                alt={`${site.title}のトップ画像`}
                            />
                            <p class="mt-3 text-sm">{site.description}</p>
                        </a>
                    ))
                }
            </main>
        </div>
    </div>
</Layout>
